@using TheHealtood.ViewModels;
@model IEnumerable<ProductsIndexViewModel>


<div class="container">
    <div class="text-center">
        <h2>Listado de Productos</h2>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-info">+</a>
    </div>
    <div>
        <table class="table table">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(x => x.Name)</td>
                    <td>@Html.DisplayNameFor(x => x.Price)</td>
                    <td>@Html.DisplayNameFor(x => x.Url)</td>

                    <td>Opciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>
                            <img src="@item.Url" alt="" width="100px">
                        </td>

                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalle</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Modificar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning"
                                onclick="alert('Â¿Estas seguro de borrar este producto?')">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>